@model IEnumerable<LearningPlus.Web.ViewModels.Classes.ClassesScheduleViewModel>

@{
    ViewData["Title"] = "График";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center">
    <div class="col col-md-1"></div>
    @for (int d = 0; d < 5; d++)
    {
        <div class="col col-md-2 text-center">
            <h5>@ViewBag.Days[d]</h5>
            <hr />
            @for (int i = 0; i < 7; i++)
            {
                <div class="row ml-1 mr-1">
                    <div class="col col-md-2 pl-0">@ViewBag.Hours[i]</div>

                    @{ var lpClass = Model.Where(c => c.DayOfWeek == ViewBag.Days[d]
                                  && c.TimeOfDay == ViewBag.Hours[i]);
                        @if (lpClass.Count() != 0)
                        {
                            var room1 = lpClass.FirstOrDefault(lpc => lpc.Room == "Стая_1");
                            var room2 = lpClass.FirstOrDefault(lpc => lpc.Room == "Стая_2");
                            var students = room1?.StudentNamesShort.Length + room2?.StudentNamesShort.Length > 12 ?
                                string.Join(", ", room1?.StudentNamesShort + room2?.StudentNamesShort).Substring(0, 12) + "..." :
                                string.Join(", ", room1?.StudentNamesShort + room2?.StudentNamesShort);
                            <div class="col col-md-1">
                                <b>@room1?.Discipline</b>
                            </div>
                            <div class="col col-md-1 ">
                                <b>@room2?.Discipline</b>
                            </div>
                            <div class="col col-md-7 pr-0 text-right">@students</div>
                        }
                        else
                        {
                            <div class="col col-md-10 pr-0 text-right">
                                <a asp-controller="Classes" asp-action="Create">Свободен час</a>
                            </div>
                        }
                    }
                </div>
                <hr class="mt-1 mb-1" />
            }
        </div>
    }
    <div class="col col-md-1"></div>
</div>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col col-md-4"></div>
    @for (int d = 5; d < 7; d++)
    {
        <div class="col col-md-2 text-center">
            <h5>@ViewBag.Days[d]</h5>
            <hr />
            @for (int i = 0; i < 7; i++)
            {
                <div class="row ml-1 mr-1 justify-content-between">
                    <div>@ViewBag.Hours[i]</div>
                    <div><b>М</b></div>
                    <div>Иван5678906666</div>
                </div>
                <hr class="mt-1 mb-1" />
            }
        </div>
    }
    <div class="col col-md-4 "></div>
</div>

