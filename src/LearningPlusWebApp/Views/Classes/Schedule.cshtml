
@{
    ViewData["Title"] = "График";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-center">
    <div class="col col-md-1"></div>
    @for (int d = 0; d < 5; d++)
    {
        <div class="col col-md-2 text-center">
            <h5>@ViewBag.Days[d]</h5>
            <hr />
            @for (int i = 0; i < 7; i++)
            {
                <div class="row ml-1 mr-1 justify-content-between">
                    <div>@ViewBag.Hours[i]</div>
                    <div><b>М A</b></div>
                    <div>Иван5678906666</div>
                </div>
                <hr class="mt-1 mb-1" />
            }
        </div>
    }
    <div class="col col-md-1"></div>
</div>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col col-md-4"></div>
    @for (int d = 5; d < 7; d++)
    {
        <div class="col col-md-2 text-center">
            <h5>@ViewBag.Days[d]</h5>
            <hr />
            @for (int i = 0; i < 7; i++)
            {
                <div class="row ml-1 mr-1 justify-content-between">
                    <div>@ViewBag.Hours[i]</div>
                    <div><b>М</b></div>
                    <div>Иван5678906666</div>
                </div>
                <hr class="mt-1 mb-1" />
            }
        </div>
    }
    <div class="col col-md-4 "></div>
</div>

