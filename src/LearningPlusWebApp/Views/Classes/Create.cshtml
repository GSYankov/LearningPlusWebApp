@model LearningPlus.Web.ViewModels.Classes.ClassesCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassesCreateViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select name="dayofweek">
                    @foreach (var day in ViewBag.Days)
                    {
                        <option value="@day">@day</option>
                    }
                </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfDay" class="control-label"></label>
                <select name="timeofday">
                    @foreach (var hour in ViewBag.FullHours)
                    {
                        <option value="@hour">@hour</option>
                    }
                </select>
                <span asp-validation-for="TimeOfDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discipline" class="control-label"></label>
                <select name="discipline">
                    @foreach (var discp in ViewBag.Disciplines)
                    {
                        <option value="@discp">@discp.ToString().Replace("_"," ")</option>
                    }
                </select>
                <span asp-validation-for="Discipline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentIds" class="control-label"></label>
                <select multiple name="studentids" size="6">
                    @foreach (var student in ViewBag.Children)
                    {
                        <option value="@student.Key">@student.Value</option>
                    }
                </select>
                <span asp-validation-for="StudentIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select name="teacherid">
                    @foreach (var teacher in ViewBag.Teachers)
                    {
                        <option value="@teacher.Key">@teacher.Value</option>
                    }
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <select name="room">
                    @foreach (var room in ViewBag.Rooms)
                    {
                        <option value="@room">@room.ToString().Replace('_', ' ')</option>
                    }
                </select>
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

