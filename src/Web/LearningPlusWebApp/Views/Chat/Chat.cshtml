@model IEnumerable<LearningPlus.Web.ViewModels.Chat.ChatMessage>

@{
    ViewBag.Title = "Chat";
}

@section Head{
    <link href="~/css/site.css" rel="stylesheet" />
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="container">
    <div class="input-holder">
        <div class="input-holder">
            <div id="message-holder" class="mt-3 d-flex justify-content-start">
                <h4>Message </h4>
                <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
                <button id="sendButton" class="ml-4 btn logo-btn"><h5>Send</h5></button>
            </div>
        </div>
    </div>
    <hr style="height: 5px;" class="bg-dark" />
    <div id="messagesList" style="font-size: 32px;">
        @foreach (var message in Model)
        {
            <div>@message.User: @message.Text</div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/@@aspnet/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
}