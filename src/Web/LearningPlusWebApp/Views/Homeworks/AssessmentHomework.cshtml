@model LearningPlus.Web.ViewModels.Homework.HomeworkAssessmentViewModel

@{
    ViewData["Title"] = "Оценяване";
}

@section Head{
    <link href="~/css/site.css" rel="stylesheet">
}

<h1 class="text-center">Оцени домашно</h1>


<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Assessment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <a href="@Model.BlobLink">Изтегли/Покажи</a>
            </div>
            <div class="form-group">
                <label asp-for="UploadedOn" class="control-label"></label>
                <input asp-for="UploadedOn" class="form-control" readonly />
                <span asp-validation-for="UploadedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <input asp-for="Student" class="form-control" readonly />
                <span asp-validation-for="Student" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <input asp-for="Course" class="form-control" readonly />
                <span asp-validation-for="Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resolutions" class="control-label"></label>
                <textarea asp-for="Resolutions" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Resolutions" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col col-md-6">
                    <input type="submit" value="Запази" class="btn logo-btn" />
                </div>
                <div class="form-group col col-md-6 text-right">
                    <a href="/">Назад</a>
                </div>
            </div>
        </form>
    </div>
</div>


